<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.activities.BeachDetailsActivity">

    <ImageView
        android:id="@+id/beachDetailsImageView"
        android:layout_width="match_parent"
        android:layout_height="249dp"
        android:src="@drawable/coroa_do_aviao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/beachDetailNameTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Nome da Praia"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beachDetailsImageView" />

    <TextView
        android:id="@+id/beachDetailDescriptionTxtView"
        android:layout_width="384dp"
        android:layout_height="179dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Ginger, dreadlocks clumsily hangs over a furrowed, lively face. Narrow amber eyes, set wickedly within their sockets, watch delicately over the farms they've looked after for so long.
Fallen debry left a mark stretching from the top of the left cheek , running towards the left side of his lips and ending under his right eye leaves an amusing memory of a reclaimed home."
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/comoChegarButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.481"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/beachDetailNameTxtView" />

    <Button
        android:id="@+id/comoChegarButton"
        android:layout_width="368dp"
        android:layout_height="43dp"
        android:text="Como chegar"
        app:layout_constraintBottom_toTopOf="@+id/hoteisButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hoteisButton"
        android:layout_width="375dp"
        android:layout_height="40dp"
        android:text="HotÃ©is"
        app:layout_constraintBottom_toTopOf="@+id/restaurantesButton"
        app:layout_constraintEnd_toEndOf="@+id/comoChegarButton"
        app:layout_constraintStart_toStartOf="@+id/comoChegarButton" />

    <Button
        android:id="@+id/restaurantesButton"
        android:layout_width="372dp"
        android:layout_height="50dp"
        android:layout_marginBottom="10dp"
        android:text="Restaurantes"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/hoteisButton"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/hoteisButton" />

</androidx.constraintlayout.widget.ConstraintLayout>