<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="183dp"
    tools:layout_editor_absoluteY="173dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.activities.BeachDetailsActivity">

        <ImageView
            android:id="@+id/aboutImageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/fernando_de_noronha_beach_natural_pool_large"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/aboutNameTxtView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:text="Nome da Praia"
            android:textSize="25dp"
            android:textColor="@color/primaryColor"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutImageView" />

        <TextView
            android:id="@+id/aboutDescriptionTxtView"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="384dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="60dp"
            android:justificationMode="inter_word"
            android:text="Description beach"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/aboutNameTxtView" />

        <ImageButton
            android:id="@+id/instagramImageButton"
            android:layout_width="59dp"
            android:layout_height="53dp"
            android:layout_marginStart="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/facebookImageButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/facebookImageButton"
            app:layout_constraintVertical_bias="1.0"
            tools:srcCompat="@drawable/instagram" />

        <ImageButton
            android:id="@+id/facebookImageButton"
            android:layout_width="59dp"
            android:layout_height="53dp"
            android:layout_marginTop="45dp"
            app:layout_constraintEnd_toStartOf="@+id/twitterImageButton"
            app:layout_constraintStart_toEndOf="@+id/instagramImageButton"
            app:layout_constraintTop_toBottomOf="@+id/aboutDescriptionTxtView"
            tools:srcCompat="@drawable/facebook" />


        <ImageButton
            android:id="@+id/twitterImageButton"
            android:layout_width="59dp"
            android:layout_height="53dp"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="@+id/facebookImageButton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/facebookImageButton"
            app:layout_constraintVertical_bias="1.0"
            tools:srcCompat="@drawable/twitter" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>


